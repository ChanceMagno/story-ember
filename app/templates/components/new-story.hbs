<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="img">Image</label>
    {{input value=img id="img" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="text">Content</label>
    {{textarea value=text id="text" rows="6" class="form-control"}}
  </div>
  <button class="btn btn-primary" {{action 'saveStory'}}>Save</button>
</form>
